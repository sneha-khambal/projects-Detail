pipeline{
    environment{
        
        docker_image = ""
    }
    agent any

    stages{
        stage("source-code"){
            steps{
                git "https://github.com/sneha-khambal/projects-Detail.git"
            }
        }
        stage("build-image"){
            steps{
                script{
                    docker_image = docker.build registry + "$BUILD_NUMBER"
                    sh echo docker_image
                }
            }

        }
        
           }
}