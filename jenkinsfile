pipeline{
    environment{
        
        docker_image = ""
    }
    agent any

    stages{
        stage("source-code"){
            steps{
                git "https://github.com/sneha-khambal/projects-Detail.git"
            }
        }
        stage("build-image"){
            steps{
                 
                   sh """
                   docker build -t ngAppimage
                   """
                
            }

        }
        stage("run-image"){
            steps{
                
                   sh """
                   docker run -d --name ngImage -p 9000:80 ngAppimage 
                   """
                
            }

        }
        
           }
}